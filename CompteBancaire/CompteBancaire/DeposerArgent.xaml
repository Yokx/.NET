<Page x:Class="CompteBancaire.DeposerArgent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompteBancaire"
        mc:Ignorable="d"
            Title="DeposerArgent" Height="550" Width="500" Loaded="OnLoad">
    <Grid Background="#FF7E7A7A">

        <StackPanel>
            <Image Source="Assets/close-outline.png" Height="29" Width="20" HorizontalAlignment="Right" />
            <Label Content="Déposer de l'argent" Foreground="#FFF7F5F2" Width="200" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="24"/>
            <Label Content="Choisir le Compte" Foreground="#FFF3F312" FontSize="14" Width="120"/>
            <ComboBox x:Name="comboComptes" Width="100"/>
            <Label Content="Montant à déposer" Foreground="#FFF3F312" FontSize="14" Width="130"/>
            <TextBox x:Name="textBoxMontantADeposer" Width="100" Height="22"/>
            <Label/>
            <Button x:Name="buttonDeposer" Content="Valider" Width="100" Background="#FFDCD054" FontFamily="Yu Gothic UI Semibold" Foreground="#FF2B2828"/>


        </StackPanel>

    </Grid>

</Page>